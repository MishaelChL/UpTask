extends layout

block contenido 
    .contenido-principal
        h1 #{nombrePagina} - #{proyecto.nombre}

        //Agregar tareas la proyecto
        form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="POST")
            .campo
                label(for="tarea") Tarea: 
                input.nombre-tarea(type="text" name="tarea" placeholder="Nombre de la Tarea") 
            .campo.enviar
                input.boton.nueva-tarea(type="submit" value="agregar")

        //TO DO - Listado de pendientes

        pre= vardump(tareas) 

        //Acciones que se puedan realizar
        .contenedor-acciones
            a(href=`/proyecto/editar/${proyecto.id}` class="boton") Editar Proyecto
            button#eliminar-proyecto(type="button" data-proyecto-url=proyecto.url class="boton eliminar") Eliminar Proyecto 
            